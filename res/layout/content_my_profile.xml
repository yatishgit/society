<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.societtee.MyProfile"
    tools:showIn="@layout/app_bar_my_profile">


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/my_profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/my_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My name"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/my_profile_image"
        android:layout_toEndOf="@+id/my_profile_image" />

    <TextView
        android:id="@+id/my_profile_userid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Id: "
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_alignParentTop="false"
        android:layout_below="@id/my_profile_image"/>

    <TextView
        android:id="@+id/my_profile_user_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Type: "
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_alignParentTop="false"
        android:layout_below="@id/my_profile_userid"/>


    <TextView
        android:id="@+id/my_profile_flatno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flat No: "
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_alignParentTop="false"
        android:layout_below="@id/my_profile_user_type"/>

    <TextView
        android:id="@+id/my_profile_user_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact: "
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_alignParentTop="false"
        android:layout_below="@id/my_profile_flatno"/>

</RelativeLayout>
